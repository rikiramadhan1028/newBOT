{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "nodejs-transaction-engine/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd nodejs-transaction-engine && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "always"
  }
}